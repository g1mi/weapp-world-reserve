.school-view {
    padding: 15px 10px 15px 12px;
    border-bottom: 1px solid #dadada;
    cursor: pointer;
    overflow: hidden;
    font-size: 14px;
    line-height: 100%;
    position: relative;
}

.location-view {
    font-size: 12px;
    font-style: normal;
    clear: both;
    padding-top: 5px;
}

.call-view {
    position: absolute;
    right: 80px;
    top: 10px;
}

.call-view image {
    width: 20px;
    height: 20px;
    margin-right: 5px;
}

.location-img {
    position: absolute;
    right: 25px;
    top: 12px;
}

.location-img image {
    width: 10px;
    height: 15px;
}

.location-img text {
    font-size: 12px;
    padding: 0 3px;
    vertical-align: middle;
}

.view-flex {
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 1000;
}

.block-view {
    background: #ececeb;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: space-around;
}

.customer {
    background: red;
    width: 80px;
    height: 40px;
    position: fixed;
    bottom: 0px;
    left: 38%;
    z-index: 999999;
    margin: 0 auto;
}