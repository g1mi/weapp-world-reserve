.main {
    background-color: rgb(248,247,252);
    font-family: Microsoft Yahei;
    font-size: 0.8em;
    line-height: 1.571em;
    margin-bottom: 64px;
}

.header,.navbar,.navbar h1.logo,.header-nav {
    width: 100%;
}

.header {
    align-items: center;
    display: flex;
    justify-content: center;
    border-top: 1px solid #eee;
    background-color: rgb(126,48,142);
}

.activity-con {
    width: 100%;
}

.activity-con .act-img {
    padding: 0;
    margin: 0;
    line-height: 0;
    border: none;
}

.activity-con .act-img image {
    width: 100%;
    border: none;
    margin: 0;
    padding: 0;
}

.activity-con .act-title-h2 {
    background-color: #6f46a0;
    color: #fff;
    font-size: 1.6em;
    padding: 15px 0;
    padding-left: 12px;
}

.activity-con .act-title-h4 {
    color: #652480;
    font-size: 1.1em;
    padding: 1% 15px;
}

.act-mess {
    color: #363636;
    font-size: 1em;
    line-height: 150%;
    padding: 1% 15px;
}

.ten-view {
    background-image: url(http://m.risecenter.com/img/rise-form-bg4.png);
    background-repeat: no-repeat;
    background-position: right top;
    background-size: 30% 105%;
}

.ten-img {
    margin-top: 28px;
    display: flex;
    justify-content: center;
}

.ten-view image {
    width: 70%;
    height: 80px;
}

.input-view {
    padding-top: 40px;
    position: relative;
    font-size: 0.9em;
}

.input-view input {
    border: 1px solid #a0a0a0;
    border-radius: 5px;
    width: 100%;
    position: relative;
    top: -25px;
    left: 50%;
    background: #fff;
    padding-left: 5px;
}

.input-view label {
    position: relative;
    left: 3%;
}

.radio {
    margin-left: 10px;
    width: 22%;
    font-size: 0.8em;
    text-align: center;
}

.radio.active {
    background-color: #6e4299;
    border-radius: 6px;
    color: #fff;
}

.radio radio {
    width: 0;
    transform: scale(.0);
}

.radio-group {
    width: 65%;
    display: flex;
    flex-wrap: nowrap;
    position: relative;
    justify-content: space-around;
    top: -20px;
    left: 27%;
    font-weight: bold;
}

button[type="primary"] {
    background-color: #7e308e;
}

.button-view {
    margin-left: 5%;
    margin-right: 5%;
}

button {
    line-height: 1.8555555600000004;
}

.title-coarse {
    color: #000;
    font-size: 1em;
    padding: 5% 15px 1%;
    text-align: center;
    font-weight: bold;
}

.title-dial {
    color: #000;
    font-size: 1em;
    padding: 5% 15px 1%;
    text-align: center;
}

.cell-dial {
    margin-top: 30px;
    width: 60%;
    background-color: #7f2f8e;
    border-radius: 2px;
    text-align: center;
    color: #fff;
    display: flex;
    align-self: center;
    justify-content: center;
}

.inputview {
    border: 1px solid #a0a0a0;
    border-radius: 5px;
    width: 230px;
    position: absolute;
    top: -23px;
    left: 30%;
    height: 22px;
    background-color: #000000;
    opacity: 0.0;
    z-index: 1000;
}

.view-flex {
    position: fixed;
    bottom: 0;
    width: 100%;
    z-index: 1000;
}

.block-view {
    background: #ececeb;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: space-around;
}

.customer {
    background: red;
    width: 80px;
    height: 40px;
    position: fixed;
    bottom: 0px;
    left: 38%;
    z-index: 999999;
    background-color: #000000;
    opacity: 0.0;
}